@model IEnumerable<Product>?

@{
    ViewData["Title"] = "Products";
}

<div class="row pt-4 mb-5">
    <div class="col-6">
        <h2 class="text-primary">Products List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-secondary">
            <i class="bi bi-plus-circle"></i>&nbsp;<span>Create New Product</span>
        </a>
    </div>
</div>

<div class="row">
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}