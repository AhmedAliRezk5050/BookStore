@model IEnumerable<Product>?

@{
    ViewData["Title"] = "Products";
}

<div class="row pt-4 mb-5">
    <div class="col-6">
        <h2 class="text-primary">Products List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-secondary">
            <i class="bi bi-plus-circle"></i>&nbsp;<span>Create New Category</span>
        </a>
    </div>
</div>

<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Product Title</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var product in Model ?? Enumerable.Empty<Product>())
        {
            <tr>
                <td>@product.Title</td>
                <td>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-warning d-inline-flex gap-1">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger d-inline-flex gap-1">
                           <i class="bi bi-trash"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>