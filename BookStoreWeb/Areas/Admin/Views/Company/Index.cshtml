@{
    ViewData["Title"] = "Companies";
}

<div class="row pt-4 mb-5">
    <div class="col-6">
        <h2 class="text-primary">Companies List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Company" asp-action="Upsert" class="btn btn-outline-secondary">
            <i class="bi bi-plus-circle"></i>&nbsp;<span>Create New Company</span>
        </a>
    </div>
</div>

<div class="row">
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>StreetAddress</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}